# Server port for Hono API
# Default: 8787 (avoids common dev port conflicts)
# Docker: Set via APP_PORT in docker-compose or .env
PORT=8787

# Security / encryption
# (REQUIRED - generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
API_KEY_ENCRYPTION_KEY=

# Set to true if behind a proxy like Nginx
TRUST_PROXY=false 

# Database
DATABASE_URL=sqlite://./data/chat.db

# Application URL (for CORS in production)
APP_URL=http://localhost:3000